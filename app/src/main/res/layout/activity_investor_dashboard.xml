<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayoutInvestor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ================= MAIN CONTENT ================= -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8">

        <!-- ================= HEADER ================= -->
        <LinearLayout
            android:id="@+id/headerInvestor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/splash_gradient"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Top icons -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icMenu"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu"
                    android:layout_alignParentStart="true"
                    app:tint="@android:color/white"/>

                <ImageView
                    android:id="@+id/icBell"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_notification"
                    android:layout_alignParentEnd="true"
                    app:tint="@android:color/white"/>
            </RelativeLayout>

            <!-- Hello -->
            <TextView
                android:id="@+id/tvHelloInvestor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello Investor ðŸ‘‹"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discover founders and manage connections"
                android:textColor="#EEEEEE"
                android:textSize="14sp"
                android:layout_marginTop="6dp"/>

            <!-- ================= FILTER (INSIDE HEADER) ================= -->
            <LinearLayout
                android:id="@+id/layoutFilterRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_filter_container"
                android:gravity="center_vertical"
                android:elevation="6dp">

                <!-- âœ… Selected Category Text -->
                <TextView
                    android:id="@+id/tvSelectedCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ALL"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1D4ED8"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <!-- Filter Icon -->
                <ImageView
                    android:id="@+id/icFilter"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="10dp"
                    android:padding="4dp"
                    android:background="@drawable/ic_filter"
                    android:src="@drawable/ic_filter"
                    app:tint="@android:color/black"/>
            </LinearLayout>


            <!-- REQUESTS SELECTOR ROW -->
            <!-- REQUESTS SELECTOR BOX -->
            <LinearLayout
                android:id="@+id/layoutRequestsSelector"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="6dp"
                android:visibility="gone"
                android:background="@drawable/bg_requests_selector"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tabYourRequests"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:text="Your Requests"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_requests_tab_active" />

                <TextView
                    android:id="@+id/tabFounderRequests"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:gravity="center"
                    android:text="Founder Requests"
                    android:textStyle="bold"
                    android:textColor="#065F46"
                    android:background="@drawable/bg_requests_tab_inactive" />
            </LinearLayout>



        </LinearLayout>

        <!-- ================= FEED / BODY ================= -->
        <FrameLayout
            android:id="@+id/investorContentContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp"

            app:layout_constraintTop_toBottomOf="@id/headerInvestor"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigationInvestor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ================= BOTTOM NAV ================= -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationInvestor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:menu="@menu/menu_investor_bottom"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/bottom_nav_selector"
            app:itemTextColor="@color/bottom_nav_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ================= DRAWER ================= -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include layout="@layout/drawer_investor_menu"/>
    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>
