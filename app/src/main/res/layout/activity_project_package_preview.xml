<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FC">

    <!-- ================= HEADER ================= -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@drawable/splash_gradient"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_back"
            app:tint="@android:color/white"/>

        <TextView
            android:id="@+id/tvProjectTitle"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- ================= EDIT BUTTON ================= -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditPackage"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="Edit Package"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="#D32F2F"
        app:cornerRadius="20dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================= CONTENT ================= -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btnSend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ================= IMAGE ================= -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="56dp"
                android:layout_marginBottom="20dp"
                android:stateListAnimator="@null"
                app:cardPreventCornerOverlap="false"
                app:cardCornerRadius="22dp"
                app:cardElevation="10dp"
                app:strokeWidth="1dp"
                app:strokeColor="#CBD5E1">

                <ImageView
                    android:id="@+id/ivProjectImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/placeholder_project"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= FOUNDER ================= -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="Founder Details"
                        android:textColor="#0D47A1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvFounderName"
                        android:textColor="#111827"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvFounderEmail"
                        android:textColor="#111827"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvFounderPhone"
                        android:textColor="#111827"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= SUMMARY ================= -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#E8F5E9"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="Project Summary"
                        android:textColor="#0D47A1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvSummary"
                        android:layout_marginTop="10dp"
                        android:textColor="#1F2937"
                        android:lineSpacingExtra="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= BUSINESS ADVANTAGE ================= -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/chip_bg_light_blue"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvBusinessNote"
                        android:text="Business Advantage (Optional)"
                        android:textColor="#0D47A1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/etBusinessNote"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:enabled="false"
                        android:focusable="false"
                        android:gravity="top"
                        android:textColor="@color/black"
                        android:hint="Explain how this benefits the investor"
                        android:textColorHint="@color/grey"
                        android:padding="14dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ================= DEVELOPMENT STATUS ================= -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FFF7ED"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:orientation="vertical">

                    <TextView
                        android:text="Development Status"
                        android:textColor="#0D47A1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <RadioGroup
                        android:id="@+id/rgDevStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbOngoing"
                            android:text="Ongoing"
                            android:checked="true"
                            android:textColor="@color/black"
                            android:layout_marginEnd="20dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <RadioButton
                            android:id="@+id/rbCompleted"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Completed"/>
                    </RadioGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>



    <!-- ================= SEND ================= -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSend"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:text="Send Request"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="#2563EB"
        app:cornerRadius="22dp"
        app:elevation="10dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
