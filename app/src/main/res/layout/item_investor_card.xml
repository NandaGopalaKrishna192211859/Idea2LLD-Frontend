<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#F8FAFC">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER -->
        <LinearLayout
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="#EDE9FE">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user"/>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_marginStart="14dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:text="Investor Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#111827"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvCompany"
                    android:text="Company Name"
                    android:textSize="13sp"
                    android:textColor="#374151"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvBio"
                    android:text="Short investor bio goes here..."
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_marginTop="6dp"
                    android:text="AI / FinTech"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="#2563EB"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvAmount"
                    android:text="₹50,000 – ₹2,00,000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#065F46"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


        <!-- FOOTER (same behavior as item_project_card) -->
        <LinearLayout
            android:id="@+id/footerLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnAccept"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Accept"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#16A34A"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnReject"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Reject"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#DC2626"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnChat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Chat"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#4F46E5"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnPrimary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="View"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#1E3A8A"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cancel"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#991B1B"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Delete"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#7F1D1D"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>



    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
