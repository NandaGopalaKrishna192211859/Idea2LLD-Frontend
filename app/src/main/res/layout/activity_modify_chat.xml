<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerModify"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/splash_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ICON + TEXT BLOCK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_back"
                app:tint="@android:color/white" />
            <!-- BACK ICON (IMAGE BUTTON â€“ SAFE) -->

            <!-- TEXT BLOCK -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modify Project"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Tell us what you want to change or improve"
                    android:textColor="#F1F1F1"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <!-- CHAT CONTAINER -->
    <androidx.cardview.widget.CardView
        android:id="@+id/chatContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="14dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/headerModify"
        app:layout_constraintBottom_toTopOf="@id/inputSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:clipToPadding="false"/>
    </androidx.cardview.widget.CardView>

    <!-- INPUT SECTION -->
    <LinearLayout
        android:id="@+id/inputSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tip -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tip: Type 'done' or 'that's it' to finish, or click Done below"
            android:textSize="15sp"
            android:textColor="#777777"
            android:layout_marginBottom="6dp"/>

        <!-- Input Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Describe your changes..."
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:background="@android:color/white"
                android:padding="12dp"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:elevation="2dp"
                android:drawablePadding="8dp"
                android:singleLine="false"/>

            <Button
                android:id="@+id/btnSend"
                android:layout_width="72dp"
                android:layout_height="48dp"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#D32F2F"/>
        </LinearLayout>

        <!-- Done Button -->
        <Button
            android:id="@+id/btnDone"
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#B71C1C"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
